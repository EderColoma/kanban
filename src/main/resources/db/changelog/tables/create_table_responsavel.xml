<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:pro="http://www.liquibase.org/xml/ns/pro"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
						http://www.liquibase.org/xml/ns/dbchangelog-ext
 						http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
 						http://www.liquibase.org/xml/ns/pro
						http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
						
	<changeSet author="ecoloma" id="createTable-responsavel" dbms="postgresql">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="responsavel"/>
			</not>
		</preConditions>
	
    	<createTable schemaName="public"
                 	 tableName="responsavel">

			<column name="id" type="bigint">
				<constraints primaryKey="true" primaryKeyName="responsavel_pk"/>
			</column>
			<column name="nome" type="varchar(255)"/>
			<column name="email" type="varchar(255)"/>
			<column name="cargo" type="varchar(255)"/>
			<column name="secretaria_id" type="bigint">
				<constraints foreignKeyName="responsavel_secretaria_fk"
				             referencedTableSchemaName="public"
				             referencedTableName="secretaria"
				             referencedColumnNames="id"/>
			</column>
    	</createTable>
    	
    	<rollback>
    		<dropTable tableName="responsavel"/>
    	</rollback>
	</changeSet>

</databaseChangeLog>